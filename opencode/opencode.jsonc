{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "shfmt": {
      "command": [
        "shfmt",
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr",
        "-w",
        "$FILE"
      ],
      "extensions": [
        ".sh",
        ".bash"
      ]
    }
  },
  "mcp": {
    "atlassian-rovo": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp"
    },
    "github": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp"
    },
    "microsoft-learn": {
      "enabled": false,
      "type": "remote",
      "url": "https://learn.microsoft.com/api/mcp"
    }
  },
  "theme": "system"
}
